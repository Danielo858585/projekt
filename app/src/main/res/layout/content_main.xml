<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.daniel.czaterv2.MainActivity"
                tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_gpsinfo"
        style="@style/LabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="New Text"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/text_info_title"
        style="@style/LabelText.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Witaj!"/>

    <TextView
        android:id="@+id/text_info_describe"
        style="@style/LabelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_info_title"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        android:text="@string/welcomeMessage"/>

    <Button
        android:id="@+id/btn_main_start"
        style="@style/Button.Red"
        android:layout_width="match_parent"
        android:layout_below="@id/text_info_describe"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/rozpocznij"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_main_start"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Zaloguj"/>

    <Button
        android:id="@+id/btn_registry"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Zarejestruj"/>


    <TextView
        android:id="@+id/tv_longitude"
        style="@style/LabelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:text="Longitude"/>

    <TextView
        android:id="@+id/tv_latitude"
        style="@style/LabelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_longitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Latitude"/>

    <Button
        android:id="@+id/btn_main_gps_enabled"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_latitude"
        android:layout_marginBottom="80dp"
        android:text="@string/gpsenabled"/>

    <Button
        android:id="@+id/btn_info"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="info"/>
</RelativeLayout>
